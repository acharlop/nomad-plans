{
  "name": "nomad-map",
  "version": "1.0.0",
  "description": "Vue front end for nomadplans.co",
  "author": "Avi Charlop",
  "private": true,
  "engines": {
    "node": "10.16.x",
    "yarn": ">=1.15.0"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon server/index.js --watch server",
    "build": "nuxt build",
    "start": "cross-env NODE_ENV=production node server/index.js",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "lint:fix": "yarn lint --fix && yarn prettier:fix",
    "prettier": "prettier **/**.{js,vue}",
    "prettier:fix": "prettier --write **/**.{js,vue}",
    "test": "jest --no-cache",
    "test:watch": "jest --watch --no-cache",
    "test:cover": "jest --collect-coverage",
    "test:ci": "yarn test:cover"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "eslint --ext .js,.vue --ignore-path .gitignore . --fix",
      "prettier --write **/**.{js,vue}"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.3.6",
    "@nuxtjs/date-fns": "^1.0.0",
    "@nuxtjs/pwa": "^3.0.0-0",
    "@nuxtjs/vuetify": "^1.6.3",
    "cross-env": "^5.2.0",
    "dotenv": "^8.1.0",
    "fastify": "^1.13.3",
    "firebase": "^6.5.0",
    "nuxt": "^2.0.0",
    "vue-clamp": "^0.2.2",
    "vue-facebook-login-component": "^1.3.7",
    "vue2-google-maps": "^0.10.7",
    "vuex-persistedstate": "^2.5.4"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@nuxtjs/eslint-config": "^1.1.2",
    "@nuxtjs/eslint-module": "^1.0.0",
    "@vue/test-utils": "^1.0.0-beta.29",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.1.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-nuxt": ">=0.4.2",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^2.6.0",
    "jest": "^24.1.0",
    "jest-serializer-vue": "^2.0.2",
    "lint-staged": "^8.2.1",
    "nodemon": "^1.18.9",
    "prettier": "^1.16.4",
    "vue-jest": "^4.0.0-0"
  }
}
